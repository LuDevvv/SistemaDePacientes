@{
    ViewData["Title"] = "Home Page";
}

<section class="w-full bg-white">
    <div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl lg:py-24">
        <div class="flex w-full mx-auto text-left">
            <div class="relative inline-flex items-center mx-auto align-middle">
                <div class="text-center">
                    <h1 class="max-w-5xl text-2xl font-bold leading-none tracking-tighter text-neutral-600 md:text-5xl lg:text-6xl lg:max-w-7xl">
                        Simplifica la Gestión de Pacientes <br class="hidden lg:block">
                    </h1>
                    <p class="max-w-xl mx-auto mt-8 text-base leading-relaxed text-gray-500">
                        Tu aliado en el cuidado de la salud. Registra, gestiona y brinda atención de calidad con Pacientify.
                    </p>
                    <div class="flex justify-center w-full max-w-2xl gap-2 mx-auto mt-6">
                        <div class="mt-3 rounded-lg sm:mt-0">
                            <button class="items-center block px-5 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 lg:px-10 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Get bundle</button>
                        </div>
                        <div class="mt-3 rounded-lg sm:mt-0 sm:ml-3">
                            <button class="items-center block px-5 lg:px-10 py-3.5 text-base font-medium text-center text-blue-600 transition duration-500 ease-in-out transform border-2 border-white shadow-md rounded-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">See features</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<footer class="bg-white" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Pacientify</h2>

    <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 lg:px-16">
        <div class="xl:grid xl:grid-cols-3 xl:gap-8">
            <div class="text-white xl:col-span-1">
                <a class="text-lg font-bold tracking-tighter text-blue-600 transition duration-500 ease-in-out transform tracking-relaxed lg:pr-8" href="/groups/footer/">Pacientify</a>
                <p class="w-1/2 mt-2 text-sm text-gray-500">Tu solución integral para la gestión de pacientes.</p>
            </div>
            <div class="grid grid-cols-2 gap-8 mt-12 xl:mt-0 xl:col-span-2">
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        <h3 class="text-sm font-bold tracking-wider text-blue-500 uppercase">Navegación</h3>
                        <ul role="list" class="mt-4 space-y-2">
                            <li>
                                <a href="/pricing" class="text-base font-normal text-gray-500 hover:text-blue-600">Precios</a>
                            </li>
                            <li>
                                <a href="/features" class="text-base font-normal text-gray-500 hover:text-blue-600">Características</a>
                            </li>
                            <li>
                                <a href="/contact" class="text-base font-normal text-gray-500 hover:text-blue-600">Contacto</a>
                            </li>
                        </ul>
                    </div>
                    <div class="mt-12 md:mt-0">
                        <h3 class="text-sm font-bold tracking-wider text-blue-500 uppercase">Legal</h3>
                        <ul role="list" class="mt-4 space-y-2">
                            <li>
                                <a href="/privacy-policy" class="text-base font-normal text-gray-500 hover:text-blue-600">Política de Privacidad</a>
                            </li>
                            <li>
                                <a href="/terms-of-service" class="text-base font-normal text-gray-500 hover:text-blue-600">Términos de Servicio</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        <h3 class="text-sm font-bold tracking-wider text-blue-500 uppercase">Síguenos</h3>
                        <ul role="list" class="mt-4 space-y-2">
                            <li>
                                <a href="https://twitter.com/Pacientify" class="text-base font-normal text-gray-500 hover:text-blue-600">Twitter</a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/company/pacientify" class="text-base font-normal text-gray-500 hover:text-blue-600">LinkedIn</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="px-4 py-12 mx-auto bg-gray-50 max-w-7xl sm:px-6 lg:px-16">
        <div class="flex flex-wrap items-baseline">
            <span class="mt-2 text-sm font-light text-gray-500">
                Derechos de autor © 2023 - <a href="https://pacientify.com" class="mx-2 text-blue-600 hover:text-gray-500" rel="noopener noreferrer">Pacientify</a>. Todos los derechos reservados.
            </span>
        </div>
    </div>
</footer>